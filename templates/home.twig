{% extends "base.twig" %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-12">
                <h3>
                    List all categories that are within the blogs, with links to the archive page
                </h3>
                <ul>
                    {% for category in page_categories %}
                        <li>
                            <a href="{{ category.path }}">
                                {{ category.name }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
    <div class="loadmorecontainer">
        {% for post in posts %}

            {% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}

        {% endfor %}

        {% if posts.pagination.next %}
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <a id="load-older-posts" href="{{ posts.pagination.next.link }}">
                        Load more posts
                    </a>
                </div>
            </div>
        </div>
        {% endif %}
    </div>



    {#{% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}#}


{% endblock %}
