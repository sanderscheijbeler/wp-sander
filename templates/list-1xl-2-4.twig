{% extends "base.twig" %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center">
            {% set itemnum = 1 %}
            {% for post in posts %}
                {% if itemnum == 1 %}
                    <div class="col-12">
                        {% include ['blog-post-large.twig'] %}
                    </div>
                {% elseif itemnum > 1 and itemnum <= 3 %}
                    <div class="col-12">
                        {% include ['blog-post-small.twig'] %}
                    </div>
                {% else %}
                    <div class="col-4">
                        {% include ['blog-post-small.twig'] with {
                            'blogType' : '--vert'
                        } %}
                    </div>
                {% endif %}
                {% set itemnum = itemnum + 1 %}
            {% endfor %}
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12">
                {% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
            </div>
        </div>
    </div>
{% endblock %}
