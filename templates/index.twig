{% extends "base.twig" %}

{% block content %}
    <div class="container">
        <div class="row">
            {% for post in posts %}
                <div class="col-12">
                    {% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12">
                {% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}

            </div>
        </div>
    </div>

{% endblock %}
