{# This file demonstrates using most of the index.twig template and modifying
   just a small part. See `search.twig` for an example of another approach #}

{% extends "base.twig" %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h2 class="heading3">
                    Alle berichten binnen de categorie: {{ title }}
                </h2>
            </div>
        </div>
        <div class="row">
            {% for post in posts %}
                <div class="col-sm-12">
                    {% include ['blog-post-small.twig'] %}
                </div>
            {% endfor %}
        </div>
        <div class="row">
            <div class="col-12">
                {% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
            </div>
        </div>
    </div>

{% endblock %}
