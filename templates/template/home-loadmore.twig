{% extends "base/base.twig" %}

{% block content %}
    <div class="loadmorecontainer">
        <div class="container">
            <div class="row justify-content-center">
                {% for post in posts %}
                    <div class="col-24">
                        {% include ['card/blog-post-small.twig'] %}
                    </div>
                {% endfor %}
            </div>
        </div>
        {% if posts.pagination.next %}
            <div class="container">
                <div class="row">
                    <div class="col-24">
                        <a id="load-older-posts" class="loadmore__link" href="{{ posts.pagination.next.link }}">
                            Load more posts
                        </a>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
