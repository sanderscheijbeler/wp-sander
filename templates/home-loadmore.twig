{% extends "base.twig" %}

{% block content %}
    <div class="loadmorecontainer">
        <div class="container">
            <div class="row justify-content-center">
                {% for post in posts %}
                    <div class="col-12">
                        {% include ['blog-post-small.twig'] %}
                    </div>
                {% endfor %}
            </div>
        </div>

        {#{% if posts.pagination.next %}#}
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <a id="load-older-posts" href="{{ posts.pagination.next.link }}">
                            Load more posts
                        </a>
                    </div>
                </div>
            </div>
        {#{% endif %}#}
    </div>
{% endblock %}
