{% extends "base.twig" %}

{% block content %}
    <div class="content-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <article class=" post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
                        <img src="{{ post.thumbnail.src|resize(1200, 400) }}">
                        <section class="article-content">
                            <h1 class="article-h1">
                                {{ post.title }}
                            </h1>
                            <a href="{{ post.link }}">
                                {{ _e('edit') }}
                            </a>
                            <p class="blog-author">
                                <span>
                                    By
                                </span>
                                <a href="{{ post.author.path }}">
                                    {{ post.author.name }}
                                </a>
                                <span>
                                    &bull;
                                </span>
                                {{ post.date }}
                                <span>
                                    &bull;
                                </span>
                                {% if post.categories %}
                                    {% for cat in post.categories %}
                                        <a href="{{ cat.path }}">
                                            {{ cat.name }}
                                        </a>
                                    {% endfor %}
                                {% endif %}
                                <span>
                                    &bull;
                                </span>
                                {% if post.tags %}
                                    {% for tag in post.tags %}
                                        <a href="{{ tag.path }}">
                                            {{ tag.name }}
                                        </a>
                                    {% endfor %}
                                {% endif %}
                            </p>
                            <div class="article-body">
                                {{ post.content }}
                            </div>
                        </section>

                        {% include "section-comment.twig" %}
                    </article>
                </div>
            </div>
        </div>
    </div><!-- /content-wrapper -->
{% endblock %}
